@require 'stylus/theme.styl'

.popup
  pointer-events: all
  position: relative
  flex: 1
  display: flex
  flex-flow: column
  z-index: zIndex.popup

  
 


  &__header
    display: flex

  &__fade
    position: absolute
    left: 0
    top: 0
    height: 100%
    width: 100%
    background-color: rgba(colors.white, 50%)
    backdrop-filter: blur(2px)

  &__container
    @extend .border, .shadow
    border-radius: radius.lg
    border-top-right-radius: 0

    background-color: colors.white
    margin: auto
    position: relative
    padding: padding.lg
    display flex
    flex-flow: column
    flex: 1
    box-shadow: 0px 0px 15px 5px rgba(0,0,0,0.1)
    

    &_lg
      flex: 0.8
      width: 80%


  &_no-padding
    padding: 0

    
  &__close
    @extend .focusable
    content: url('icons/crossBig.svg')
    position: absolute
    top: -30px
    right: -30px
    height: 30px
    width: auto


  