@require 'stylus/theme.styl'

.popup
  pointer-events: all
  position: relative
  flex: 1
  display: flex
  flex-flow: column
  z-index: zIndex.popup

  overflow: hidden

  
  &-container
    position: absolute
    top: 0
    left: 0
    width: 100vw
    height: 100vh
    display: flex


  &__header
    display: flex

  &__fade
    position: absolute
    left: 0
    top: 0
    height: 100%
    width: 100%
    background-color: rgba(colors.white, 50%)
    backdrop-filter: blur(2px)

  &__container
    @extend .border, .shadow
    border-radius: radius.lg
    border-top-right-radius: 0

    background-color: colors.white
    margin: auto
    position: relative
    padding: padding.lg
    display flex
    flex-flow: column
    box-shadow: 0px 0px 15px 5px rgba(0,0,0,0.1)

    
    
    &_sm
      margin: auto

    &_md
      // flex: 0.5
      // height: 50vh
      min-height: 50vh
      width: 50%

    &_lg
      // flex: 0.8
      height: 80vh
      // max-height: 80vh
      width: 80%


  &_no-padding
    padding: 0

    
  &__close
    @extend .focusable
    content: url('icons/crossBig.svg')
    position: absolute
    top: -30px
    right: -30px
    height: 30px
    width: auto


  