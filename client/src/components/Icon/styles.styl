@require 'stylus/theme.styl'

.icon

  display: block
  &_xs
    height: fontSize.xs
  &_sm
    height: fontSize.sm
  &_md
    height: fontSize.md
  // &_lg
  //   height: fontSize.lg

  &_inline
    display: inline

@keyframes loading
  from
    transform: rotate(0deg)
  to
    transform: rotate(360deg)

.loader-icon
  animation: loading 0.5s infinite linear
  fill: colors.primary