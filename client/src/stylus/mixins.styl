@require './variables.styl'

.border
  border: 1px solid colors.light
  box-sizing: border-box

// Отключение границы по направлениям
for key, value in directions
  .b{key}
    border-{value}: 0

for key, value in directions
  .b_{key}
    border-{value}: 1px solid colors.light

// Скругления границ
for key, value in radius
  .radius-{key}
    border-radius: value

// Жирность текста границ
for key, value in fontWeight
  .weight_{key}
    font-weight: value

for key, value in padding
  .padding_{key}
    padding: value

for key, value in margin
  .margin_{key}
    margin: value

.shadow
  box-shadow: 0px 4px 25px 0px rgba(0, 0, 0, 0.05)

.focus
  box-shadow: 0px 0px 0px 2px alpha(colors.primary, 20%)
  z-index: zIndex.focused

.unselectable
  outline: none
  user-select: none

.monospace
  font-family: 'Roboto Mono', monospace

.focusable
  outline: none
  transition: box-shadow 0.1s ease-out
  position: relative

  &:focus, &:focus-within
    @extend .focus