/* Roboto regular */

@font-face 
  font-family: "Roboto";
  src: url("../fonts/Roboto-Regular.ttf") format('truetype');
  font-weight: 400;
  font-style: normal;


/* Roboto italic */

@font-face 
  font-family: "Roboto";
